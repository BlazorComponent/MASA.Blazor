@using Microsoft.AspNetCore.Components.Rendering
<style>
    .mycontainer {
        width: 100%;
        display: block;
    }

        .mycontainer > div {
            width: 45%;
            margin: 2% 0 0 2%;
            display: inline-table
        }

    .item {
        margin: 5px;
        padding: 0.75rem 1.25rem;
        margin-bottom: -1px;
        border: 1px solid rgba(0,0,0,.125);
    }
</style>
<div class="mycontainer">
    <MDragZone OnConfigure=SetOptions >
        <BDragItem>
            <MCard Class="item">
                <MCardTitle>item1.1</MCardTitle>
                <MCardText>item content1</MCardText>
            </MCard>
        </BDragItem>
        <BDragItem>
            <MCard Class="item">
                <MCardTitle>item1.2</MCardTitle>
                <MCardText>item content2</MCardText>
            </MCard>
        </BDragItem>
    </MDragZone>

    <MDragZone OnConfigure=SetOptions>
        <BDragItem>
            <MCard Class="item">
                <MCardTitle>item2.1</MCardTitle>
                <MCardText>item content1</MCardText>
            </MCard>
        </BDragItem>
        <BDragItem>
            <MCard Class="item">
                <MCardTitle>item2.2</MCardTitle>
                <MCardText>item content1</MCardText>
            </MCard>
        </BDragItem>
    </MDragZone>
</div>

@code {

    private void SetOptions(SorttableOptions options)
    {
        options.Group = "group";
    }

    private void SetOptionsOther(SorttableOptions options)
    {
        options.Group = "group2";
    }
}