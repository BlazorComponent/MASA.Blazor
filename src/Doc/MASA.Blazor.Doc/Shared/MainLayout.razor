    <ChildContent>
        <NavMenu @key="NavigationManager.Uri"></NavMenu>
        <div class="pt-12"></div>
    </ChildContent>
</MNavigationDrawer>

<MMain Class="mainlayout-m-main">
    <ErrorBoundary @ref="_errorBoundary">
        <ChildContent>
            @Body
        </ChildContent>
        <ErrorContent>
            <Error></Error>
        </ErrorContent>
    </ErrorBoundary>
</MMain>

