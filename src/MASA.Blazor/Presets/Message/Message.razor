@namespace MASA.Blazor.Presets

<MSnackbar @bind-Value="Visible" Timeout="Timeout" OnClosed="HandleOnClick" Top>
    <ActionContent>
        <MButton Icon OnClick="HandleOnClick">
            <MIcon>mdi-close</MIcon>
        </MButton>
    </ActionContent>
    <ChildContent>
        @if (Type != AlertTypes.None)
                {
        <MIcon Color="@IconColor" Style="margin-right: 4px">@Icon</MIcon>
        }

        @ChildContent
    </ChildContent>
</MSnackbar>
