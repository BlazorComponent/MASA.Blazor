<MForm>
    <MContainer>
        <MRow>
            <MCol Cols="12" Sm="6" Md="4">
                <MTextField Type="number" TValue="decimal" @bind-Value="basicValue" Label="Basic"></MTextField>
            </MCol>
            <MCol Cols="12" Sm="6" Md="4">
                <MTextField Type="number" TValue="decimal" @bind-Value="limitInputValue" Label="Limit Input" NumberProps="@(prop=> { prop.Min = 1; prop.Max = 10; prop.Step = 0.1m; })">
                </MTextField>
            </MCol>
            <MCol Cols="12" Sm="6" Md="4">
                <MTextField Type="number" TValue="decimal" Label="Close Control Button" @bind-Value="closeControlValue" NumberProps="@(prop=> { prop.Min = 10; prop.Max = 1000; prop.Step = 10m; prop.ShowControl = false; })">
                </MTextField>
            </MCol>
        </MRow>
    </MContainer>
</MForm>

@code {
    decimal basicValue = 1;
    decimal limitInputValue = 1;
    decimal closeControlValue = 10;
}