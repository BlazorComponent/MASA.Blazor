<MContainer fluid>
    <MRow>
        <MCol Cols="12"
              Sm="12"
              Md="6"
              OffsetMd="3">
            <MCard>
                <MToolbar Extended>
                    <ChildContent>
                        <MAppBarNavIcon></MAppBarNavIcon>
                    </ChildContent>
                    <ExtensionContent>
                        <Transition Name="fab-transition">
                            <ShowTransitionElement Value="!hidden">
                                <MButton Color="pink"
                                         Fab
                                         Dark
                                         Small
                                         Absolute
                                         Bottom
                                         Left>
                                    <MIcon>mdi-plus</MIcon>
                                </MButton>
                            </ShowTransitionElement>
                        </Transition>
                    </ExtensionContent>
                </MToolbar>
                <MCardText Style="height: 300px;" Class="grey lighten-5 text-center">
                    <MButton Color="primary"
                             OnClick="()=> hidden = !hidden">
                        @(hidden? "Show": "Hide")
                    </MButton>
                </MCardText>

                <MCardText Style="height: 100px; position: relative">
                    <Transition Name="scale-transition">
                        <ShowTransitionElement Value="!hidden">
                            <MButton Color="pink"
                                     Dark
                                     Absolute
                                     Top
                                     Right
                                     Fab>
                                <MIcon>
                                    mdi-plus
                                </MIcon>
                            </MButton>
                        </ShowTransitionElement>
                    </Transition>
                </MCardText>
            </MCard>
        </MCol>
    </MRow>
</MContainer>

@code {
    bool hidden = false;
}